<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_margin="8sp"
    android:elevation="30sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/layout1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_person_24"
            android:id="@+id/personImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parakram singh"
            android:id="@+id/personName"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/personImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Understand the general software development process for object-oriented applications using an IDE (integrated development environment) such as Android Studio.
Demonstrate that you have at least 1-3 years of experience in object-oriented programming, with some of it focused on the Java programming language. (These practicals will not explain object-oriented programming or the Java language.)"
            android:textSize="12dp"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/personImage"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5dp"
            android:id="@+id/feedDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>